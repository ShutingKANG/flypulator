  <!--   <doc_depend>doxygen</doc_depend> -->
  <buildtool_depend>catkin</buildtool_depend>

  <depend>roscpp</depend>
  <depend>std_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>trajectory_msgs</depend>

  <build_depend>message_generation</build_depend> <!-- turn srv files into source code for C++, python and other languages-->

  <exec_depend>message_runtime</exec_depend> <!-- turn srv files into source code for C++, python and other languages-->

</package>